{
  "name": "@ecodrix/richtext",
  "version": "0.1.3",
  "description": "A modular rich text editor with toolbar and iframe support.",
  "private": false,
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/es/index.js",
  "types": "./dist/types/index.d.ts",
  "unpkg": "./dist/umd/index.iife.js",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/es/index.js",
      "require": "./dist/cjs/index.cjs",
      "default": "./dist/umd/index.umd.js"
    },
    "./styles": {
      "import": "./dist/es/globals.css",
      "require": "./dist/cjs/globals.css",
      "default": "./dist/umd/globals.css"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "next dev --webpack",
    "build:dev": "next build --webpack",
    "build": "npm run prepublishOnly",
    "build:lib": "rm -rf dist && tsup --tsconfig tsconfig.build.json",
    "prepublishOnly": "npm run build:final",
    "build:types": "api-extractor run --local",
    "build:final": "npm run build:lib && npm run build:types",
    "start": "next start",
    "lint": "eslint"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.552.0",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-color": "^2.19.3",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.54.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "tailwindcss": "^4",
    "tsup": "^8.5.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
